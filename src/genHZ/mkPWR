include ../mkPWR.inc

XNETLIB_F=Xaxpy.F Xdot.F Xgemm.F Xgemv.F Xger.F Xlagsy.F Xlaran.F Xlarnd.F Xlarnv.F Xlaror.F Xlaruv.F Xlaset.F Xnrm2.F Xscal.F Xsymv.F Xsyr2.F
XNETLIB_O=$(XNETLIB_F:.F=.o)

GENHZ_F90=gendat.F90 genlam.F90 seedix.F90 seedok.F90 txtlam.F90
GENHZ_O90=$(GENHZ_F90:.F90=.o)

OBJ=$(XNETLIB_O)
OBJ_90=$(GENHZ_O90)
OBJS=$(OBJ_90) $(OBJ)

all: sgenHZ.exe dgenHZ.exe

sgenHZ.exe: $(OBJS) sgenHZ.o mkPWR ../mkPWR.inc
	$(FC) $(FCFLAGS) sgenHZ.o $(OBJS) -o$@ $(LDFLAGS)

sgenHZ.o: sgenHZ.F90 mkPWR ../mkPWR.inc
	$(FC) $(FCFLAGS) -c $<

dgenHZ.exe: $(OBJS) dgenHZ.o mkPWR ../mkPWR.inc
	$(FC) $(FCFLAGS) dgenHZ.o $(OBJS) -o$@ $(LDFLAGS)

dgenHZ.o: dgenHZ.F90 mkPWR ../mkPWR.inc
	$(FC) $(FCFLAGS) -c $<

$(OBJ_90): %.o: %.F90 mkPWR ../mkPWR.inc
	$(FC) $(FCFLAGS) -c $<

$(OBJ): %.o: %.F mkPWR ../mkPWR.inc
	xlf_r $(FCFLAGS) -c $<

clean:
	-$(RM) sgenHZ.exe
	-$(RM) dgenHZ.exe
	-$(RM) sgenHZ.o
	-$(RM) dgenHZ.o
	-$(RM) $(OBJS)
