include mkLNX.inc

all:
	$(MAKE) -C HZ -f mkLNX all
	$(MAKE) -C genHZ -f mkLNX all
	$(MAKE) -C DGSVD -f mkLNX all
	$(MAKE) -C exe0 -f mkLNX all
	$(MAKE) -C exe1 -f mkLNX all
	$(MAKE) -C exe2 -f mkLNX all
ifdef USE_MPI
	$(MAKE) -C exe3 -f mkLNX all
endif

clean:
	$(MAKE) -C HZ -f mkLNX clean
	$(MAKE) -C genHZ -f mkLNX clean
	$(MAKE) -C DGSVD -f mkLNX clean
	$(MAKE) -C exe0 -f mkLNX clean
	$(MAKE) -C exe1 -f mkLNX clean
	$(MAKE) -C exe2 -f mkLNX clean
ifdef USE_MPI
	$(MAKE) -C exe3 -f mkLNX clean
endif
