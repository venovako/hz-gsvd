include ../mkLNX.inc

all: exe0.seq exe0.par

exe0.seq: exe0.o ../HZ/libhz.a mkLNX ../mkLNX.inc
	$(FC) $(FCFLAGS) -mkl=sequential exe0.o -o$@ $(LDFLAGS)

exe0.par: exe0.o ../HZ/libhz.a mkLNX ../mkLNX.inc
	$(FC) $(FCFLAGS) -mkl=parallel exe0.o -o$@ $(LDFLAGS)

exe0.o: exe0.F90 ../HZ/hz.mod mkLNX ../mkLNX.inc
	$(FC) $(FCFLAGS) -c exe0.F90

clean:
	-$(RM) exe0.o
	-$(RM) exe0.par
	-$(RM) exe0.seq
